{
  "name": "linter-kondo",
  "main": "./index.js",
  "version": "1.1.0",
  "description": "An Atom Linter package for clj-kondo (Clojure, ClojureScript)",
  "keywords": [
    "linter",
    "kondo",
    "clj-kondo",
    "clojure",
    "clojurescript"
  ],
  "repository": "https://github.com/gerred/linter-kondo",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^4.6.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "package-deps": [
    "linter",
    "language-clojure"
  ],
  "configSchema": {
    "kondoExecutablePath": {
      "title": "clj-kondo path",
      "description": "Path to the `cljkondo` executable",
      "type": "string",
      "default": "clj-kondo"
    },
    "lintsOnChange": {
      "title": "Lints on change",
      "description": "When disabled, only lints files on save",
      "type": "boolean",
      "default": true
    }
  }
}
