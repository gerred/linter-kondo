{
  "name": "linter-joker",
  "main": "./index.js",
  "version": "1.0.0",
  "description": "An Atom Linter package for joker (Clojure, ClojureScript)",
  "keywords": [
    "linter",
    "joker",
    "clojure",
    "clojurescript"
  ],
  "repository": "https://github.com/rgdelato/linter-joker",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^4.6.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "package-deps": [
    "linter",
    "language-clojure"
  ],
  "configSchema": {
    "jokerExecutablePath": {
      "title": "Joker path",
      "description": "Path to the `joker` executable",
      "type": "string",
      "default": "joker"
    },
    "lintsOnChange": {
      "title": "Lints on change",
      "description": "When disabled, only lints files on save",
      "type": "boolean",
      "default": "true"
    }
  }
}
